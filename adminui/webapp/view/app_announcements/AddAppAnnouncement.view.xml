<mvc:View displayBlock="true" controllerName="asc.admin.controller.app_announcements.AddAppAnnouncement" height="100%"
	xmlns="sap.uxap" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:m="sap.m" 
	xmlns:f="sap.f" 
	xmlns:l="sap.ui.layout" 
	xmlns:core="sap.ui.core" 
	xmlns:form="sap.ui.layout.form"
>

	<f:DynamicPage toggleHeaderOnTitleClick="false">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<m:Title id="idTitle" text="New Announcement Page" wrapping="true" class="sapUiTinyMarginEnd"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<l:VerticalLayout id="idVerticalLayout" class="" width="100%">
				<form:SimpleForm id="idFormAdd" editable="true" layout="ColumnLayout" columnsM="1" columnsL="1" columnsXL="1">
					<form:content>
						<m:Toolbar class="asc_bottom_border">
							<m:Label text="Details" class="sapUxAPObjectPageSectionTitle"/>
							<m:ToolbarSpacer/>
							<m:Button id="idButtonSave" text="Save" type="Emphasized" press="onValidate" />
							<m:Button id="idButtonCancel" text="Cancel" type="Transparent" press="onCancelPress" />
						</m:Toolbar>
						<m:Label text="" />
						<m:CheckBox text="Visible" selected="{app_announcement>/visible}"/>
						<m:Label text="Title" />
						<m:Input id="idInputTitle" value="{app_announcement>/title}" required="true" liveChange="validateControl" />
						<m:Label text="Description" />
						<m:Label text="Sort Order" />
						<m:Input id="idInputSortOrder" value="{app_announcement>/sort_order}" required="true" liveChange="validateControl" />
					</form:content>
				</form:SimpleForm>
				<m:Label text="Description:" class="formattedTextPadding" />
			</l:VerticalLayout>
		</f:content>
	</f:DynamicPage>
</mvc:View>