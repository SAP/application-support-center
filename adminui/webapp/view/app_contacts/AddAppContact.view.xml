<mvc:View displayBlock="true" controllerName="asc.admin.controller.app_contacts.AddAppContact" height="100%" 
	xmlns="sap.uxap" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:m="sap.m" 
	xmlns:f="sap.f" 
	xmlns:l="sap.ui.layout" 
	xmlns:core="sap.ui.core" 
	xmlns:form="sap.ui.layout.form">

	<f:DynamicPage toggleHeaderOnTitleClick="false">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<m:Title id="idTitle" text="New Contact Page" wrapping="true" class="sapUiTinyMarginEnd"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<l:VerticalLayout id="idVerticalLayout" class="" width="100%">
				<form:SimpleForm id="idFormAdd" editable="true" layout="ColumnLayout" columnsM="1" columnsL="1" columnsXL="1">
					<form:content>
						<m:Toolbar class="asc_bottom_border">
							<m:Label text="Details" class="sapUxAPObjectPageSectionTitle"/>
							<m:ToolbarSpacer/>
							<m:Button id="idButtonSave" text="Save" type="Emphasized" press="onValidate" />
							<m:Button id="idButtonCancel" text="Cancel" type="Transparent" press="onCancelPress" />
						</m:Toolbar>

						<m:Label text="User" labelFor="user"/>
						<m:Input
							id="idUser"
							type="Text"
							placeholder="Enter Firstname, lastname or User ID ..."
							showSuggestion="true"
							showTableSuggestionValueHelp="false"
							suggestionRows="{contacts>/}"
							suggestionItemSelected="handleUserChange"
							>
							<m:suggestionColumns>
								<m:Column
									hAlign="Center"
									popinDisplay="Inline"
									demandPopin="true"
									minScreenWidth="Tablet">
									<m:Label text="Full Name"/>
								</m:Column>
								<m:Column
									hAlign="Center"
									popinDisplay="Inline"
									demandPopin="false"
									minScreenWidth="Tablet">
									<m:Label text="User ID"/>
								</m:Column>
							</m:suggestionColumns>
							<m:suggestionRows>
								<m:ColumnListItem>
								<m:cells>
									<m:Label text="{contacts>first_name} {contacts>last_name}"/>
									<m:Label id="idExternalId" text="{contacts>external_id}"/>
								</m:cells>
								</m:ColumnListItem>
							</m:suggestionRows>
						</m:Input>




						<m:Label text="Role" labelFor="role"/>
						<m:Select id="idSelectRole" selectedKey="{app_contact>role_id}" items="{
													path: 'options>/app_roles',
													sorter: { path: 'value' }
												}">
							<core:Item key="{options>key}" text="{options>value}" />
						</m:Select>
					</form:content>
				</form:SimpleForm>
			</l:VerticalLayout>
		</f:content>
	</f:DynamicPage>
</mvc:View>